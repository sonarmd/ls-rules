  "name": "Tony Fortress - Comprehensive Baseline",
  "description": "Fort Knox grade Little Snitch configuration for macOS. Blocks all telemetry, analytics, and unnecessary connections while maintaining full application functionality. Compatible with HIPAA/SOC2 security requirements.",
  "rules": [
    {
      "action": "deny",
      "direction": "incoming",
      "process": "any",
      "notes": "Block ALL incoming connections - no exceptions"
    },
    {
      "action": "deny",
      "direction": "both",
      "process": "any",
      "notes": "Zero LAN visibility - block all local network traffic"
    },
    {
      "action": "deny",
      "direction": "both",
      "process": "any",
      "protocol": "icmp",
      "notes": "Block ICMP/ping - no responding to probes"
    },
    {
      "action": "deny",
      "direction": "outgoing",
      "process": "any",
      "notes": "Block multicast, broadcast, and link-local traffic"
    },
    {
      "action": "allow",
      "direction": "outgoing",
      "process": "/usr/libexec/configd",
      "protocol": "udp",
      "ports": [
        67,
        68
      ],
      "notes": "DHCP for network connectivity"
    },
    {
